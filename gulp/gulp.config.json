{
  "src": {
    "css": {
      "entry": "./src/css/main.scss",
      "all": "./src/css/**/*.scss"
    },
    "js": {
      "vendor": [
        "./src/vendor/angular/angular.js",
        "./src/vendor/angular-resource/angular-resource.js",
        "./src/vendor/angular-route/angular-route.js",
        "./src/vendor/angular-animate/angular-animate.js"
      ],
      "entry": "./src/js/**/*.module.js",
      "app": "./src/js/**/*.js"
    },
    "templates": {
      "all": "./src/js/**/*.html"
    }
  },
  "dest": {
    "css": "./public/css",
    "js": "./public/js",
    "templates": "./public/templates"
  },
  "server": {
    "js": {
      "entry": "server.js",
      "modules": "./server/**/*.js"
    }
  },
  "gulp": {
    "js": {
      "all": "./gulp/**/*.js"
    }
  }
}
